@using UI.Properties;

@using PagedList;
@using PagedList.Mvc;

@model IEnumerable<UI.Models.EInstalacaoViewModel>

@{
  ViewBag.Title = Resources.EInstalacaoViewModel;
}

<div class="container">
  <br />
  <br />
  <h2>@Resources.EInstalacaoViewModel</h2>

  <div class="btn btn-outline-dark btn-sm">
    @Html.ActionLink(Resources.CreateNew, "Create")
  </div>
  <table class="table">
    <tr>
      <th>
        @Resources.EmpresaId
      </th>
      <th>
        @Html.DisplayNameFor(model => model.InstalacaoId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.PropositoId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.AreaCoberta)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.AreaTotal)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.QtdEmpregados)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Horario)
      </th>
      <th></th>
    </tr>

    @foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Instalacao.Empresa.Fantasia)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Instalacao.Denominacao)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.FInstalacao.Denominacao)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.AreaCoberta)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.AreaTotal)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.QtdEmpregados)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Horario)
        </td>
        <td>
          @Html.ActionLink(Resources.Update, "Edit", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" }) |
          @Html.ActionLink(Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" }) |
          @Html.ActionLink(Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" })
        </td>
      </tr>
    }
  </table>

  @if ((Model as IPagedList).PageCount > 0) {
    @Resources.Page@:&nbsp;@((Model as IPagedList).PageNumber) @Resources.Of @((Model as IPagedList).PageCount)
  }
  @Html.PagedListPager(Model as IPagedList, page => Url.Action("Index", new { page }))
</div>
