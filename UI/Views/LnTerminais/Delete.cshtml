@using UI.Properties;

@model UI.Models.LnTerminalViewModel

@{
  ViewBag.Title = Resources.Delete + " " + Resources.LnTerminalViewModel;
}
<div class="container">
  <br />
  <br />

  <h2>@Resources.Delete</h2>

  <h3>@Resources.DeleteConfirm</h3>
  <div>
    <h4>@Resources.LnTerminalViewModel</h4>
    <hr />

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.TerminalId)
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Terminal.Denominacao)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.LinhaId)
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Linha.Denominacao)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.Uteis)
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Uteis)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.UteisFluxo)
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.UteisFluxoCap)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.Sabados)
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Sabados)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.SabadosFluxo)
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.SabadosFluxoCap)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.Domingos)
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Domingos)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.DomingosFluxo)
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.DomingosFluxoCap)
      </div>
    </div>

    @using (Html.BeginForm()) {
      @Html.AntiForgeryToken()
      <div class="form-actions no-color">
        <input type="submit" value="@Resources.Delete" class="btn btn-danger btn-sm" />
        <div class="btn btn-outline-dark btn-sm">
          @Html.ActionLink(Resources.BackToList, "Index")
        </div>
      </div>
    }
  </div>
</div>
