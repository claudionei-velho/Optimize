@using UI.Properties;

@model UI.Models.CorredorViewModel

@{
  ViewBag.Title = Resources.Update + " " + Resources.CorredorViewModel;
}

<div class="container">
  <br />
  <br />

  <h2>@Resources.Update</h2>

  @using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      <h4>
        @Resources.CorredorViewModel  |
        @Html.ActionLink(Resources.LnCorredorViewModel, "Filter", controllerName: "LnCorredores", routeValues: new { id = Model.Id }, htmlAttributes: null)
