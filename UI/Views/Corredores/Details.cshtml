@using UI.Properties;

@model UI.Models.CorredorViewModel

@{
  ViewBag.Title = Resources.Details + " " + Resources.CorredorViewModel;
}
<div class="container">
  <br />
  <br />

  <h2>@Resources.Details</h2>

  <div>
    <h4>@Resources.CorredorViewModel</h4>
    <hr />

    <div>
      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold">
          @Html.DisplayNameFor(model => model.EmpresaId):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.Empresa.Fantasia)
        </div>
      </div>

      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold">
          @Html.DisplayNameFor(model => model.Prefixo):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.Prefixo)
        </div>
      </div>

      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold">
          @Html.DisplayNameFor(model => model.Denominacao):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.Denominacao)
        </div>
      </div>

      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold">
          @Html.DisplayNameFor(model => model.Caracteristicas):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.Caracteristicas)
        </div>
      </div>

      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold">
          @Html.DisplayNameFor(model => model.Municipio):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.Municipio)
        </div>
      </div>

      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold">
          @Html.DisplayNameFor(model => model.UfId):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.UfId)
        </div>
      </div>

      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold">
          @Html.DisplayNameFor(model => model.Extensao):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.Extensao)
        </div>
      </div>
    </div>
  </div>

  <div>
    @Html.ActionLink(Resources.Update, "Edit", new { id = Model.Id }, new { @class = "btn btn-dark btn-sm" })
    <div class="btn btn-outline-dark btn-sm">
      @Html.ActionLink(Resources.BackToList, "Index")
    </div>
  </div>
</div>
