@using UI.Properties;

@model UI.Models.ItinerarioViewModel

@{
  ViewBag.Title = Resources.Create + " " + Resources.ItinerarioViewModel;
}

<div class="container">
  <br />
  <br />

  <h2>@Resources.Create</h2>

