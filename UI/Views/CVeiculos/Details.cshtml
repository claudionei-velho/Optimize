@using UI.Properties;

@model UI.Models.CVeiculoViewModel

@{
  ViewBag.Title = Resources.Details + " " + Resources.CVeiculoViewModel;
}

<div class="container">
  <br />
  <br />
  <h2>@Resources.Details</h2>

  <div>
    <h4>@Resources.CVeiculoViewModel</h4>
    <hr />

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold">
        @Html.DisplayNameFor(model => model.Categoria):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Categoria)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold">
        @Html.DisplayNameFor(model => model.Classe):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Classe)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold">
        @Html.DisplayNameFor(model => model.Minimo):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Minimo)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold">
        @Html.DisplayNameFor(model => model.Maximo):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Maximo)
      </div>
    </div>
  </div>

  <div>
    @Html.ActionLink(Resources.Update, "Edit", new { id = Model.Id }, new { @class = "btn btn-dark btn-sm" })
    <div class="btn btn-outline-dark btn-sm">
      @Html.ActionLink(Resources.BackToList, "Index")
    </div>
  </div>
</div>
