@using UI.Properties;

@using PagedList;
@using PagedList.Mvc;

@model IEnumerable<UI.Models.VeiculoAttViewModel>

@{
  ViewBag.Title = Resources.VeiculoAttViewModel;
}

<div class="container">
  <br />
  <br />
  <h2>@Resources.VeiculoAttViewModel</h2>

  <table class="table">
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Classe)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Attributo)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Unidade)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Conteudo)
      </th>
      <th></th>
    </tr>

    @foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.CVeiculo.Classe)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.CVeiculoAtt.Caracteristica)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.CVeiculoAtt.Unidade)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Conteudo)
        </td>
        <td class="in-line left-smaller" align="right">
          @Html.ActionLink(Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" })
        </td>
      </tr>
    }
  </table>

  @if ((Model as IPagedList).PageCount > 0) {
    @Resources.Page@:&nbsp;@((Model as IPagedList).PageNumber) @Resources.Of @((Model as IPagedList).PageCount)
  }
  @Html.PagedListPager(Model as IPagedList, page => Url.Action("Index", new { page }))
</div>
