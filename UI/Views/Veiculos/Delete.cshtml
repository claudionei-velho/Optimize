      <div class="col-sm">
        @Html.DisplayFor(model => model.Renavam)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.Antt):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Antt)
