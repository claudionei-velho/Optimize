@using UI.Properties;

@model UI.Models.CLinhaViewModel

@{
  ViewBag.Title = Resources.Delete + " " + Resources.CLinhaViewModel;
}

<div class="container">
  <br />
  <br />
  <h2>@Resources.Delete</h2>

  <h3>@Resources.DeleteConfirm</h3>
  <div>
    <h4>@Resources.CLinhaViewModel</h4>
    <hr />

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold">
        @Html.DisplayNameFor(model => model.EmpresaId):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Empresa.Fantasia)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold">
        @Html.DisplayNameFor(model => model.ClassLinhaId):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.ClassLinha.Denominacao)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold">
        @Html.DisplayNameFor(model => model.Descricao):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Descricao)
      </div>
    </div>

    @using (Html.BeginForm()) {
      @Html.AntiForgeryToken()

      <div class="form-actions no-color">
        <input type="submit" value="@Resources.Delete" class="btn btn-danger btn-sm" />
        <div class="btn btn-outline-dark btn-sm">
          @Html.ActionLink(Resources.BackToList, "Index")
        </div>
      </div>
    }
  </div>
</div>
