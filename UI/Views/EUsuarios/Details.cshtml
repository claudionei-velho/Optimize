@using UI.Properties;

@model UI.Models.EUsuarioViewModel

@{
  ViewBag.Title = Resources.Details + " " + Resources.EUsuarioViewModel;
}

<div class="container">
  <br />
  <br />

  <h2>@Resources.Details</h2>

  <div>
    <h4>@Resources.EUsuarioViewModel</h4>
    <hr />

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.EmpresaId):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Empresa.Fantasia)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.UsuarioId):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Usuario.Nome)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Resources.UsuarioLogin:
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Usuario.Login)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.Ativo):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Ativo)
      </div>
    </div>
  </div>
  <div>
    @Html.ActionLink(Resources.Update, "Edit", new { id = Model.Id }, new { @class = "btn btn-dark btn-sm" })
    <div class="btn btn-outline-dark btn-sm">
      @Html.ActionLink(Resources.BackToList, "Index")
    </div>
  </div>
</div>
