@using UI.Properties;

@using PagedList;
@using PagedList.Mvc;

@model IEnumerable<UI.Models.ViagemViewModel>

@{
  ViewBag.Title = Resources.ViagemViewModel;
}

<div class="container left-widt">
  <br />
  <br />
  <h2>@Resources.ViagemViewModel</h2>

  <div class="btn btn-outline-dark btn-sm">
    @Html.ActionLink(Resources.CreateNew, "Create")
  </div>
  <table class="table">
    <tr>
      <th>
        @Resources.PesquisaId
      </th>
      <th>
        @Html.DisplayNameFor(model => model.LinhaId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Item)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Data)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Sentido)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.HorarioId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.VeiculoId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Chegada)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Inicio)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Passageiros)
      </th>
      <th></th>
    </tr>

    @foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.LnPesquisa.Pesquisa.Identificacao)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.LnPesquisa.Linha.Denominacao)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.Item)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Data)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Sentido)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Horario.Inicio)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Veiculo.Numero)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Chegada)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Inicio)
        </td>
        <td align="center">
          @if (item.Passageiros != null) {
            @Html.DisplayFor(modelItem => item.Passageiros)
          }
          else {
            @Html.DisplayFor(modelItem => item.Catraca)
          }
        </td>

        <td class="in-line left-smaller">
          @Html.ActionLink(Resources.Update, "Edit", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" }) |
          @Html.ActionLink(Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" }) |
          @Html.ActionLink(Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" })
        </td>
      </tr>
    }
  </table>

  @if ((Model as IPagedList).PageCount > 0) {
    @Resources.Page@:&nbsp;@((Model as IPagedList).PageNumber) @Resources.Of @((Model as IPagedList).PageCount)
  }
  @Html.PagedListPager(Model as IPagedList, page => Url.Action("Index", new { page }))
</div>
