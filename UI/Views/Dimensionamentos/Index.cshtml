}

<div class="container left-widt">
  <br />
  <br />

  <h2>
    @Resources.DimensionamentoViewModel |
    <div class="btn btn-outline-dark btn-sm">
      @Html.ActionLink(Resources.Export, "Export", "Dimensionamentos")
