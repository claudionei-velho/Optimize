        <td align="center">
          @Html.DisplayFor(modelItem => item.CicloAB)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.CicloBA)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.VeiculosE)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.VeiculosP)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.Extensao)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.KmTotal)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.KmTotalE)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.KmTotalP)
        </td>
      </tr>
    }
  </table>

  @if ((Model as IPagedList).PageCount > 0) {
    @Resources.Page@:&nbsp;@((Model as IPagedList).PageNumber) @Resources.Of @((Model as IPagedList).PageCount)
  }
  @Html.PagedListPager(Model as IPagedList, page => Url.Action("Index", new { page }))
</div>
