          @Html.DisplayFor(modelItem => item.Ociosidade)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.Passageiros)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.Critica)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.Media)
        </td>
        <td align="left">
          @Html.DisplayFor(modelItem => item.Intervalo)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.Fluxo)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.LotacaoE)
        </td>
