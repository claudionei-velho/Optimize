        @Html.DisplayNameFor(model => model.KmTotalE)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.KmTotalP)
      </th>
    </tr>

    @foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Pesquisa.Identificacao)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Linha.Denominacao)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.DiaIdName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.PrLinha.EPeriodo.Denominacao)
        </td>
