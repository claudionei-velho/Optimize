      <th>
        @Html.DisplayNameFor(model => model.Termino)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Duracao)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Ociosidade)
      </th>
      <th>
