      <th>
        @Html.DisplayNameFor(model => model.PrognosticoP)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.IntervaloP)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Veiculos)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.CicloAB)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.CicloBA)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.VeiculosE)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.VeiculosP)
