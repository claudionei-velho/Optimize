@using UI.Properties;

@using PagedList;
@using PagedList.Mvc;

@model IEnumerable<UI.Models.PesquisaViewModel>

@{
  ViewBag.Title = Resources.PesquisaViewModel;
}

<div class="container left-widt">
  <br />
  <br />
  <h2>@Resources.PesquisaViewModel</h2>

  <div class="btn btn-outline-dark btn-sm">
    @Html.ActionLink(Resources.CreateNew, "Create")
  </div>
  <table class="table ">
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.EmpresaId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Identificacao)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Inicio)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Termino)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.TerminalId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.OperacaoId)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Uteis)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Sabados)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Domingos)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Responsavel)
      </th>
      <th></th>
    </tr>

    @foreach (var item in Model) {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Empresa.Fantasia)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Identificacao)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Inicio)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Termino)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Terminal.Denominacao)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Operacao.OperLinha.Denominacao)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.Uteis)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.Sabados)
        </td>
        <td align="center">
          @Html.DisplayFor(modelItem => item.Domingos)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Responsavel)
        </td>
        <td class="in-line left-smaller">
          @Html.ActionLink(Resources.Update, "Edit", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" }) |
          @Html.ActionLink(Resources.Details, "Details", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" }) |
          @Html.ActionLink(Resources.Delete, "Delete", new { id = item.Id }, new { @class = "btn btn-outline-dark btn-sm" })
        </td>
      </tr>
    }
  </table>

  @if ((Model as IPagedList).PageCount > 0) {
    @Resources.Page@:&nbsp;@((Model as IPagedList).PageNumber) @Resources.Of @((Model as IPagedList).PageCount)
  }
  @Html.PagedListPager(Model as IPagedList, page => Url.Action("Index", new { page }))
</div>
