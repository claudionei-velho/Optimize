@using UI.Properties;

@model UI.Models.RenovacaoViewModel

@{
  ViewBag.Title = Resources.Delete + " " + Resources.RenovacaoViewModel;
}
<div class="container">
  <br />
  <br />

  <h2>@Resources.Delete</h2>

  <h3>@Resources.DeleteConfirm</h3>

  <div>
    <h4>@Resources.RenovacaoViewModel</h4>
    <hr />
    <div class="dl-horizontal">
      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold btns">
          @Html.DisplayNameFor(model => model.LinhaId):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.Linha.Denominacao):
        </div>
      </div>

      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold btns">
          @Html.DisplayNameFor(model => model.Ano):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.Ano)
        </div>
      </div>

      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold btns">
          @Html.DisplayNameFor(model => model.Mes):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.MesCap)
        </div>
      </div>

      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold btns">
          @Html.DisplayNameFor(model => model.DiaId):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.DiaIdName)
        </div>
      </div>

      <div class="row margin-top">
        <div class="col-sm-2 font-weight-bold btns">
          @Html.DisplayNameFor(model => model.Indice):
        </div>
        <div class="col-sm">
          @Html.DisplayFor(model => model.Indice)
        </div>
      </div>
    </div>

    @using (Html.BeginForm()) {
      @Html.AntiForgeryToken()

      <div class="form-actions no-color">
        <input type="submit" value="@Resources.Delete" class="btn btn-danger btn-sm" />
        <div class="btn btn-outline-dark btn-sm">
          @Html.ActionLink(Resources.BackToList, "Index")
        </div>
      </div>
    }
  </div>
</div>
