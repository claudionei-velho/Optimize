@using UI.Properties;

@model UI.Models.PaisViewModel

@{
  ViewBag.Title = Resources.Details + " " + Resources.PaisViewModel;
}
<div class="container">
  <br />
  <br />
  <h2>@Resources.Details</h2>

  <div>
    <h4>@Resources.PaisViewModel</h4>
    <hr />

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.Id):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Id)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.Nome):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Nome)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.Capital):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Capital)
      </div>
    </div>

    <div class="row margin-top">
      <div class="col-sm-2 font-weight-bold btns">
        @Html.DisplayNameFor(model => model.Continente):
      </div>
      <div class="col-sm">
        @Html.DisplayFor(model => model.Continente)
      </div>
    </div>
  </div>
  <div>
    @Html.ActionLink(Resources.Update, "Edit", new { id = Model.Id }, new { @class = "btn btn-dark btn-sm" })
    <div class="btn btn-outline-dark btn-sm">
      @Html.ActionLink(Resources.BackToList, "Index")
    </div>
  </div>
</div>
